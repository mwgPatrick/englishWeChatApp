/* pages/user/user.wxss */
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo {
  margin-top: 5%;
  margin-bottom: 5%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-nickname {
  color: rgb(97, 95, 95);
}

.usermotto {
  margin-top: 200px;
}

.userdetail{
  margin-top: 3%;
  margin-left: 3%;
  margin-right: 3%;
  padding-left: 25%;
  padding-top: 15%;
  padding-bottom: 15%;
  border-bottom:0.1rpx solid white;
  border-top:0.1rpx dotted white;
  border-top-width: 15rpx;
  border-bottom-width: 15rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
page{
  background-color: rgb(247, 244, 244);
}
.userdetext{
  font-size: 0.9rem;
  color:rgb(88, 77, 77);
}
.userdetext text{
  font-size: 1.4rem;
  color: rgb(25, 97, 25);
}
.foot{
   margin-left: 3%;
  margin-right: 3%; 
  width: 94%;
  position: fixed;
  bottom: 1%;
}
.foot view{
  height: 65rpx;
  border-bottom: 0.1rpx groove;
  border-width: 2rpx;
  font-size: 0.8rem;
  padding-left: 5%;
  text-justify: center;
  text-align: left;
  display: flex;
  flex-direction: row;
}
.foottext{
  padding-top: 1%;
  margin-left: 5%;
  width: 190rpx;
  text-align: justify;
}

.foottext::after{
  width: 100%;
  display: inline-block;
  content: '';  
}
.footimg{
  margin-top: 1%;
  width: 55rpx;
  height: 55rpx;
}
.right{
  margin-top: 1%;
  margin-left: 50%;
  width: 55rpx;
  height: 55rpx;
}

.isRuleShow{
    display: block;
}
.isRuleHide{
    display: none;
}
.ruleZhezhao{
    height: 100%;
    width: 100%;
    position: fixed;
    background-color:rgba(0, 0, 0, .5);
    z-index: 2;
    top: 0;
    left: 0;
}
.ruleZhezhaoContent{
    padding: 20rpx 0;
    width: 80%;
    background: #e1d2b1;
    margin: 60% auto;
    border-radius: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    position: relative;
}
.ruleZhezhaoText{
    width: 80%;
    font-size: 30rpx;
    color: #856d5f;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 25rpx 0 25rpx 0;
}
.readtime{
    flex-wrap:wrap;
    width: 80%;
}
.ruleHide{
    height: 60rpx!important;
    width: 60rpx!important;
    position: absolute;
    top: -20rpx;
    right: -20rpx;
}
.rule{
    display: block;
    border: 1px solid #fff;
    width: 100rpx;
    text-align: center;
    line-height: 60rpx;
    color: #fff;
    height: 60rpx;
    font-size: 30rpx;
    border-radius: 30rpx;
    position: absolute;
    top: 10%;
    right: 5%;
}
.kefu{
  background-color: rgb(25, 97, 25);
  color: white;
  width: 120rpx;
  height: 62rpx;
  font-size: 0.7rem;
}
