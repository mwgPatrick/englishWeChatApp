/* pages/setting/setting.wxss */
page{
  background-color: rgb(247, 244, 244);
}
.current{
  text-align: center;
  margin-left: 5%;
  width: 74%;
  height: 13%;
  border: 1px burlywood solid;
  border-radius: 30px;
}

.inputU{
  margin-left: 5%;
  width: 70%;
  height: 13%;
  border: 1px burlywood solid;
  border-radius: 30px;
  padding-left: 4%;
}
.allpage{
  margin-top: 5%;
  display: flex;
  flex-direction: column;
}
.row{
  margin-top: 3%;
  margin-left: 3%;
  margin-right: 3%;
  display: flex;
  flex-direction: row;
}

.textU{
  color: rgb(99, 46, 46);
  width: 22%;
  text-align: justify;
}
.textU::after{
  width: 100%;
  display: inline-block;
  content: ''; 
}

.button{
  display: flex;
  margin-top:35%;
  margin-bottom: 5%;
  background: #664a2c;
  color: white;
  font-size: 0.9rem;
  width: 205rpx;
}